<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    android:background="@color/white"
    android:gravity="center_horizontal">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:orientation="vertical"
        android:weightSum="1">

        <ViewFlipper
            android:id="@+id/flipper1"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:autoStart="true"
            android:background="#fff"
            android:flipInterval="4000"
            android:inAnimation="@android:anim/fade_in"
            android:outAnimation="@android:anim/fade_out"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/banner1" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/banner4" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/banner5" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/banner6" />
        </ViewFlipper>

        <View
            android:id="@+id/horizontalLine2"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_alignBottom="@+id/imageView20"
            android:layout_below="@id/flipper1"
            android:background="#999999" />


    </LinearLayout>

    <EditText
        android:id="@+id/startDateEditText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout"
        android:layout_weight="1"
        android:ems="10"
        android:focusable="false"
        android:inputType="date"
        android:tag="startdate"
        android:text="Please Select Date"
        android:textAlignment="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#ffffff"
        android:gravity="center"
        android:text="@string/your_cash_back_balance"
        android:textColor="#4A82EF"
        android:textSize="25sp"
        android:textStyle="bold"
        android:visibility="visible" />


    <TextView
        android:id="@+id/cashElectricityTotal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:gravity="center"
        android:text="Electricity Total : R 0"
        android:textColor="#4A82EF"
        android:textSize="25sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/municipality"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:gravity="center"
        android:text="Municipality Total : R 0"
        android:textColor="#4A82EF"
        android:textSize="25sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/dstvtotal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:gravity="center"
        android:text="DSTV Total : R 0"
        android:textColor="#4A82EF"
        android:textSize="25sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/cashTelcoTotal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:gravity="center"
        android:text="Telco Total : R 0"
        android:textColor="#4A82EF"
        android:textSize="25sp"
        android:textStyle="bold"
        android:visibility="visible" />


    <TextView
        android:id="@+id/cashTotal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#ffffff"
        android:gravity="center"
        android:text="Total : R 0"
        android:textColor="#4A82EF"
        android:textSize="25sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <Button
        android:id="@+id/printButton"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="5dp"
        android:background="#4A82EF"
        android:paddingBottom="5dp"
        android:text="Print Statement"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />


</LinearLayout>
</ScrollView>
