<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.imbyou.pavan.mykart">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_new_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_mycartlogo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".FurnitureActivity">
        </activity>

        <activity android:name=".DetailsActivity">
        </activity>

        <activity android:name=".OrderSummaryCartActivity">
        </activity>

        <activity android:name=".CheckoutActivity">
        </activity>

        <activity android:name=".ThankYouActivity">
        </activity>
    </application>

</manifest>



